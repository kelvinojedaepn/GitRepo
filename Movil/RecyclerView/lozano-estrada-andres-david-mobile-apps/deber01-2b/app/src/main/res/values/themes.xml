<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Amazonadle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_cyan</item>
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/search_view_shape</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ProductBackground">
        <item name="android:background">@drawable/product_background</item>
    </style>

    <style name="SearchViewTextColor">
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="SearchBarCompleteStyle">
        <item name="android:background">@drawable/search_bar_complete_shape</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>